<div class="container">
    <p id="notice"><%= notice %></p>
        <div class="row">
            <div class="col-xs-3">
                <h2>User info</h2>
                    <table class ="table">
                        <tr>
                          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" , size:'100x100'%>
                        </tr>
                        <tr>
                            <th>name</th>
                            <th><%= current_user.name%></th>
                        </tr>
                        <tr>
                            <th>introduction</th>
                            <th><%= current_user.introduction %></th>
                        </tr>
                    </table>
                            <%= link_to "",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>

                      <h2>New book</h2>
                        <%= form_for(@book, url: books_path) do |f| %>
                            <% if @book.errors.any? %>
                                <div id="error_explanation">
                                    <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>

                                        <ul>
                                            <% @book.errors.full_messages.each do |message| %>
                                              <li><%= message %></li>
                                            <% end %>
                                        </ul>
                                </div>
                            <% end %>
                                <div class="field">
                                         <%= f.label :Title%><br>
                                         <%= f.text_field :title %>
                                </div>
                                <div class="field">
                                        <%= f.label :Opinion%><br>
                                        <%= f.text_area :body %>
                                </div>
                                
                                
                                <div class="actions">
                                        <%= f.submit "Create Book", class: "btn btn-primary col-xs-12"%>
                                </div>
                        <% end %>
            </div>

　　　　     <div class="col-xs-9">
                <h2>Books</h2>
                    <table class="table ">
                      <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                          <% @books.each do |book| %>
                        <tr>
                            <td>
                                <%= link_to  user_path(book.user.id) do%>
                                  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpeg" , size:'50x50'%>
                             
                            </td>
                            <% end %>
                            <td>
                                  <%= link_to book_path(book.id) do %>
                                    <%= book.title %>
                                  <% end %>
                            </td>
                            <td><%= book.body %></td>
                        </tr>
                          <% end %>
                      </tbody>
                    </table>
            </div>
    </div>
</div>