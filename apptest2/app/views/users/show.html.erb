<div class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
            <div class="col-xs-3">
                <h2>User info</h2>
                <table class ="table">
                     <tr>
                         <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" , size:'100x100'%>
                     </tr>
                     <tr>
                         <th>name</th>
                         <th><%= @user.name %></th>
                     </tr>
                     <tr>
                         <th>introduction</th>
                         <th><%= @user.introduction %></th>
                     </tr>
                </table>
                     <%= link_to "",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>

                <h2>New book</h2>
                     <%= form_for(@book) do |f| %>
                        <% if @book.errors.any? %>
                             <div id="error_explanation">
                                   <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
                                   <ul>
                                        <% @book.errors.full_messages.each do |message| %>
                                            <li><%= message %></li>
                                        <% end %>
                                    </ul>
                             </div>
                        <% end %>
                          <div class="field">
                             <%= f.label :Title %><br>
                             <%= f.text_field :title %>
                          </div>
                          <div class="field">
                             <%= f.label :Opinion %><br>
                             <%= f.text_area :body %>
                          </div>
                          <div class="actions">
                             <%= f.submit "Create Book", class: "btn btn-primary col-xs-12"%>
                          </div>
                     <% end %>
            </div>


          <div class="col-xs-9">
                <h2>Books</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                          <th></th>
                          <th>Title</th>
                          <th>Opinion</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @user.books.each do |books| %>
                            <tr>
                                <td>
                                <%= link_to  user_path(@user) do %>
                                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" , size:'50Ã—50' %>
                                <% end %>
                                </td>

                                <td>
                                <%= link_to book_path(books) do %>
                                <%= books.title %>
                                <% end %>  
                                </td>
                                <td><%= books.body %></td>

                            </tr>
                        <% end %>
                  </tbody>
              </table>
        </div>
     </div>
</div>